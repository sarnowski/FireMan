							<treechildren>
								<treeitem>
									<treerow>
										<treecell class="FireManLink" label="Link 1" src="chrome://fireman/skin/images/page_white_get.png" />
									</treerow>
								</treeitem>
								<treeitem>
									<treerow>
										<treecell class="FireManLink" label="Link 2" src="chrome://fireman/skin/images/page_white_get.png" />
									</treerow>
								</treeitem>
							</treechildren>
						</treeitem>
